<%- content_for(:page_title, "Blog")%>
<%- content_for(:page_description, "The unproven speculations of a computer science student.")%>
<article>
  <h1>Blog</h1>
</article>
<%@entries.reverse_each do |entry|%>
<article class="blog">
  <h1><%=entry["title"]%></h1>
  <%if @isadmin%>
  <span>
    <p class="adj"><a href="/blog/delete?id=<%=entry["id"]%>">Delete(!)</a></p>
    <p class="adj"><a href="/blog/edit?id=<%=entry["id"]%>">[--Edit--]</a></p>
  </span>
  <%end%>
  <p class="note adj">Published <%=entry["date"]%> UTC</p>
  <p class="adj"><%=raw(entry["content"][0..255])%>...</p>
  <p><a href="/blog/<%=entry["id"]%>">Continue Reading â”€></a></p>
</article>
<%end%>
